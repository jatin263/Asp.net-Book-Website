@model Deepak_Project.Models.BookModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Add Book";
}

@using (Html.BeginForm("InsertBook","Home",FormMethod.Post)){
    <table>
        <tr>
            <td>Enter Title</td>
            <td>@Html.TextBoxFor(BookModel=>BookModel.Title)</td>
        </tr>
        <tr>
            <td>Enter Author</td>
            <td>@Html.TextBoxFor(BookModel=>BookModel.Author)</td>
        </tr>
        <tr>
            <td>Enter Category</td>
            <td>@Html.TextBoxFor(BookModel=>BookModel.Category)</td>
        </tr>
    </table>
    <input type="submit" value="Add Book" />
}