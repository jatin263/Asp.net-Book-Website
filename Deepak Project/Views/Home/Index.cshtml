@model IList<BookModel>
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <input type="text" name="q" />
    <input type="submit" value="Search"/>
}


@{
    if (Model.Count > 0)
    {
        int co = 1;
        <h3 style="text-align:center">Books</h3>
        <table width="100%">
        <tr>
            <td>S.No</td>
            <td>Title</td>
            <td>Author</td>
            <td>Category</td>
            <td>No of Downloads</td>
            <td>Buy Now</td>
        </tr>
        @for(var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@co</td>
                <td>@Model[i].Title</td>
                <td>@Model[i].Author</td>
                <td>@Model[i].Category</td>
                <td>@Model[i].NoOfDownloads</td>
                <td>@Html.ActionLink("Buy","Buy","Home",new {id=Model[i].Id})</td>
            </tr>
            co++;
        }
        </table>
    }
    else
    {
        <h3 style="text-align:center">No Result Found</h3>
    }
}
