@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-asp-controller="Home" asp-action="Login" method="post">
    <label for="email">Email</label><br />
    <input id="email" type="email" name="uEmail" /><br />
    <label for="password">Password</label><br />
    <input id="password" type="password" name="uPassword" /><br />
    <input type="submit" value="Login" />
</form>